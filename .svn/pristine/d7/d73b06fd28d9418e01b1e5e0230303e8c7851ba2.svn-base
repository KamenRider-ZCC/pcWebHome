import axios from '@/utils/ajaxRequest';

// 获取所有分类
export const getFirst = data =>
  axios.request({
    url: 'product/getFirst',
    method: 'post',
    data
  });

// 根据二级分类获取产品分页
export const getPage = data =>
  axios.request({
    url: 'product/getPage',
    method: 'post',
    data
  });

// 获取商品详情
export const getDetails = data =>
